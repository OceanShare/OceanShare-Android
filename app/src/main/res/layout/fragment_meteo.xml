<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MeteoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/profile_grey_buttons" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/marker_meteo"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/closeMarkerMenuButton"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="12dp"
                    android:gravity="center"
                    app:cardCornerRadius="90dp">

                    <ImageView
                        android:id="@+id/meteoImage"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <TextView
                android:id="@+id/meteoTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/meteo_placeholder"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meteoDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@color/profile_grey_buttons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longitude_meteo"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoLongitute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latitude_meteo"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@color/profile_grey_buttons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunrise"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoSunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunset"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoSunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@color/profile_grey_buttons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rain_risk"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoRainRisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/water_temp"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoWaterTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@color/profile_grey_buttons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@color/profile_grey_buttons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visibility"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uv_indice"
                android:textAllCaps="true"
                android:textColor="@color/profile_blue_buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meteoUVIndice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_placeholder"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>