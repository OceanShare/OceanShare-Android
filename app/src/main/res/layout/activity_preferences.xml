<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreferencesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/left_arrow"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Preferences"
            android:textColor="@color/gradient_end"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Temperature display"
        android:textColor="@color/gradient_end"
        android:textSize="22sp"
        android:textStyle="bold" />

    <segmented_control.widget.custom.android.com.segmentedcontrol.SegmentedControl
        android:id="@+id/segmented_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:columnCount="2"
        app:distributeEvenly="true"
        app:focusedBackgroundColor="@color/white"
        app:radius="5dp"
        app:segments="@array/segments"
        app:selectedBackgroundColor="@color/white"
        app:selectedStrokeColor="@color/grey"
        app:selectedTextColor="@color/black"
        app:strokeWidth="3dp"
        app:textVerticalPadding="10dp"
        app:unSelectedBackgroundColor="@color/grey"
        app:unSelectedStrokeColor="@color/grey"
        app:unSelectedTextColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Show profile picture"
            android:textColor="@color/gradient_end"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="Show your profile picture on the map instead of your boat type." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Ghost mode"
            android:textColor="@color/gradient_end"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="Show your profile picture on the map instead of your boat type." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Show your boat type"
        android:textColor="@color/gradient_end"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/smallBoatBackground"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:gravity="center"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/smallBoat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/boat_small"
                tools:ignore="ContentDescription" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mediumBoatBackground"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/mediumBoat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/boat_medium"
                tools:ignore="ContentDescription" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/largeBoatBackground"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/largeBoat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/boat_large"
                tools:ignore="ContentDescription" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/largestBoatBackground"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="2dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/largestBoat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/boat_largest"
                tools:ignore="ContentDescription" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>